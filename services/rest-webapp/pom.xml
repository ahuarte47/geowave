<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>geowave-service-parent</artifactId>
		<groupId>mil.nga.giat</groupId>
		<relativePath>../</relativePath>
		<version>0.9.5-SNAPSHOT</version>
	</parent>
	<artifactId>geowave-service-rest-webapp</artifactId>
	<name>GeoWave REST Services WebApp</name>
	<description>The server-side implementation of GeoWave services API</description>
	<packaging>war</packaging>
	<dependencies>
		<dependency>
			<groupId>mil.nga.giat</groupId>
			<artifactId>geowave-service-rest</artifactId>
			<version>${project.version}</version>
			<exclusions>
				<exclusion>
					<artifactId>javax.servlet-api</artifactId>
					<groupId>javax.servlet</groupId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>mil.nga.giat</groupId>
			<artifactId>geowave-deploy</artifactId>
			<version>${project.version}</version>
			<exclusions>
	            <exclusion>
	                <groupId>org.mortbay.jetty</groupId>
	                <artifactId>servlet-api</artifactId>
	            </exclusion>
	            <exclusion>
	                <groupId>javax.servlet</groupId>
	                <artifactId>servlet-api</artifactId>
	            </exclusion>
        	</exclusions>
		</dependency>
		<dependency>
		    <groupId>javax.servlet</groupId>
		    <artifactId>javax.servlet-api</artifactId>
		    <version>4.0.0</version>
		    <scope>provided</scope>
		</dependency>
	</dependencies>
	<!-- Tomcat Maven Plugin is added to facilitate testing the webapp
	     without deploying to an actual server i.e. create a run config
	     with tomcat7:run as a goal -->
	<build>
		<pluginManagement>
	      <plugins>
	        <plugin>
	          <groupId>org.apache.tomcat.maven</groupId>
	          <artifactId>tomcat7-maven-plugin</artifactId>
	          <version>2.2</version>
	        </plugin>
	      </plugins>
	    </pluginManagement>
	</build>
</project>